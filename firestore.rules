rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is owner of the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Friend-request updates touch only friend arrays and only by adding/removing caller uid.
    function listValue(data, key) {
      return key in data ? data[key] : [];
    }

    function isUidOnlyDelta(oldList, newList) {
      return oldList == newList
        || (
          // Add exactly caller uid
          newList.hasAll(oldList)
          && newList.size() == oldList.size() + 1
          && newList.hasAny([request.auth.uid])
          && !oldList.hasAny([request.auth.uid])
        )
        || (
          // Remove exactly caller uid
          oldList.hasAll(newList)
          && oldList.size() == newList.size() + 1
          && oldList.hasAny([request.auth.uid])
          && !newList.hasAny([request.auth.uid])
        );
    }

    function isFriendArrayUpdateByCaller(userId) {
      return isAuthenticated()
        && !isOwner(userId)
        && request.method == 'update'
        && request.resource.data.diff(resource.data).changedKeys().hasOnly([
          'friends',
          'receivedFriendRequests',
          'sentFriendRequests'
        ])
        && isUidOnlyDelta(
          listValue(resource.data, 'friends'),
          listValue(request.resource.data, 'friends')
        )
        && isUidOnlyDelta(
          listValue(resource.data, 'receivedFriendRequests'),
          listValue(request.resource.data, 'receivedFriendRequests')
        )
        && isUidOnlyDelta(
          listValue(resource.data, 'sentFriendRequests'),
          listValue(request.resource.data, 'sentFriendRequests')
        );
    }

    // User profiles
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create, delete: if isOwner(userId);
      allow update: if isOwner(userId) || isFriendArrayUpdateByCaller(userId);

      // Journals subcollection
      match /journals/{journalId} {
        allow read, write: if isOwner(userId);
      }

      // Pages subcollection (nested under journals)
      match /journals/{journalId}/pages/{pageId} {
        allow read, write: if isOwner(userId);
      }

      // Blocks subcollection
      match /blocks/{blockId} {
        allow read, write: if isOwner(userId);
      }

      // Push tokens (per device)
      match /push_tokens/{deviceId} {
        allow read: if isOwner(userId);
        allow create, update: if isOwner(userId)
          && request.resource.data.keys().hasOnly([
            'token',
            'platform',
            'updatedAt',
            'preferredLanguage',
            'createdAt'
          ])
          && request.resource.data.token is string
          && request.resource.data.platform is string
          && (
            !('preferredLanguage' in request.resource.data)
            || request.resource.data.preferredLanguage in ['tr', 'en']
          );
        allow delete: if isOwner(userId);
      }

      // Notification inbox docs are server-created only.
      // Client may only mark as read.
      match /notifications/{notificationId} {
        allow read: if isOwner(userId);
        allow create, delete: if false;
        allow update: if isOwner(userId)
          && request.resource.data.diff(resource.data).changedKeys().hasOnly([
            'isRead',
            'readAt'
          ])
          && request.resource.data.isRead == true;
      }
    }

    // Usernames (for uniqueness checks)
    match /usernames/{username} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
    }

    // Display IDs
    match /displayIds/{displayId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.uid == request.auth.uid;
    }

    // Teams
    match /teams/{teamId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }

    // Team Members
    match /team_members/{memberId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/teams/$(resource.data.teamId)).data.ownerId == request.auth.uid
      );
    }

    // Invites
    match /invites/{inviteId} {
      allow read: if isAuthenticated() && (
        resource.data.inviterId == request.auth.uid ||
        resource.data.inviteeId == request.auth.uid
      );
      allow create: if isAuthenticated() && request.resource.data.inviterId == request.auth.uid;
      allow update: if isAuthenticated() && (
        resource.data.inviterId == request.auth.uid ||
        resource.data.inviteeId == request.auth.uid
      );
      allow delete: if isAuthenticated() && resource.data.inviterId == request.auth.uid;
    }

    // User stickers
    match /user_stickers/{stickerId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() &&
        resource.data.userId == request.auth.uid &&
        request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Oplogs
    match /oplogs/{opId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        resource.data.actorId == request.auth.uid
      );
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        request.resource.data.actorId == request.auth.uid
      );
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        resource.data.actorId == request.auth.uid
      ) && (
        request.resource.data.userId == request.auth.uid ||
        request.resource.data.actorId == request.auth.uid
      );
    }
  }
}
