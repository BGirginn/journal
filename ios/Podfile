platform :ios, '15.0'
# Vendor pods (Firebase, gRPC, image_picker, etc.) emit many upstream deprecation warnings.
# Keep CI/logs actionable by suppressing warnings for pod targets.
inhibit_all_warnings!

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

fast_sim_build_enabled = ENV.fetch('JOURNAL_IOS_FAST_SIM_BUILD', '1') == '1'
apple_silicon_host = `uname -m`.strip == 'arm64'

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'YES'
      config.build_settings['SWIFT_SUPPRESS_WARNINGS'] = 'YES'
      # CocoaPods can inject duplicate -lc++ flags through transitive specs.
      config.build_settings['OTHER_LDFLAGS'] = '$(inherited) -Wl,-no_warn_duplicate_libraries'
      next unless fast_sim_build_enabled
      next unless %w[Debug Profile].include?(config.name)

      # Speed up simulator builds by compiling only the active architecture.
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'
      # On Apple Silicon hosts, avoid compiling x86_64 simulator slices.
      if apple_silicon_host
        config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'x86_64'
      end
    end
  end

  installer.aggregate_targets.map(&:user_project).uniq.each do |user_project|
    user_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['OTHER_LDFLAGS'] = '$(inherited) -Wl,-no_warn_duplicate_libraries'
        next unless fast_sim_build_enabled
        next unless %w[Debug Profile].include?(config.name)

        config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'
        if apple_silicon_host
          config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'x86_64'
        end
      end
    end
    user_project.save
  end
end
